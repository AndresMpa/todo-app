@import "../config/breakPoint.styl"
@import "../config/color.styl"
@import "../config/font.styl"

.addTodo
  display: flex
  justify-content: space-around

  padding: 20px
  margin-bottom: 30px

  border-radius: 5px

  background-color: color_canvas

  .addTodo--status
    position: relative

    width: 1.25em
    height: 1.25em

    margin: auto

    border-radius: 50%
    border: 1px solid color_strikethrough

    background-color: color_canvas

    &:hover
      cursor: pointer

    &__active
      background-color: gradient_decoration

    .addTodo--status--image
      display: none

      position: absolute

      top: 50%
      left: 50%
      transform: translate(-50%, -50%)

      &__active
        display: block

  .addTodo--description
    width: 90%

    border: none
    outline: none
    color: color_strikethrough_letter;

    background-color: color_canvas

    body-text()

    &:focus
      color: color_letter
    //text-decoration: line-through
